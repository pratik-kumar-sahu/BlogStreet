<%- include('./partials/header.ejs') -%>

<style>
  .form-heading {
    color: #fff;
    font-size: 23px;
  }

  .panel h2 {
    color: #444444;
    font-size: 18px;
    margin: 0 0 8px 0;
  }

  .panel p {
    color: #777777;
    font-size: 14px;
    margin-bottom: 30px;
    line-height: 24px;
  }

  .login-form .form-control {
    background: #f7f7f7 none repeat scroll 0 0;
    border: 1px solid #d4d4d4;
    border-radius: 4px;
    font-size: 14px;
    height: 50px;
    line-height: 50px;
  }

  .main-div {
    background: #ffffff none repeat scroll 0 0;
    border-radius: 2px;
    margin: 10px auto 30px;
    max-width: 38%;
    padding: 50px 70px 70px 71px;
  }

  .login-form .form-group {
    margin-bottom: 10px;
  }

  .login-form {
    text-align: center;
  }

  .forgot a {
    color: #777777;
    font-size: 14px;
    text-decoration: underline;
  }

  .login-form .btn.btn-primary {
    background-color: #f0ad4e;
    border-color: #f0ad4e;
    color: #ffffff;
    font-size: 14px;
    width: 100%;
    height: 50px;
    line-height: 50px;
    padding: 0;
  }

  .forgot {
    text-align: left;
    margin-bottom: 30px;
  }

  .back {
    text-align: left;
    margin-top: 10px;
  }

  .back a {
    color: #444444;
    font-size: 13px;
    text-decoration: none;
  }
</style>

<div class="container">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>SignUp</h2>
        <!-- <p>Please enter your email and password</p> -->
      </div>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
            class="form-control"
            id="username"
            placeholder="Username"
            required
          />
        </div>

        <div class="form-group">
          <input
            type="email"
            name="email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            class="form-control"
            id="email"
            placeholder="Email Address"
            required
          />
        </div>

        <div class="form-group">
          <input
            type="password"
            name="password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            class="form-control"
            id="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>

        <!-- <div class="form-group">
          <input
            type="password"
            class="form-control"
            id="inputPassword"
            placeholder="Confirm Password"
          /> -->
        <!-- </div> -->
        <!-- <div class="forgot">
          <a href="#">Forgot password?</a>
        </div> -->
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') -%>