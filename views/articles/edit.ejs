<%- include('../partials/header.ejs') -%>

<div class="container mt-4">
  <h1 class="mb-4">Edit Blog</h1>
  <form class="mb-4" action="/articles/<%= article.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input
        required
        value="<%= article.title %>"
        type="text"
        name="title"
        id="title"
        class="form-control"
        maxlength="150"
      />
    </div>
    <div class="form-group mb-2">
      <label for="image">Image Url</label>
      <input
        required
        value="<%= article.image %>"
        type="text"
        name="image"
        id="image"
        class="form-control"
      />
    </div>
    <div class="form-group mb-2"><label for="description">Description</label><textarea name="description" id="description" class="form-control" maxlength="150"><%= article.description %></textarea>
    </div>
    <div class="form-group mb-3">
      <label for="markdown">Brief Summary</label>
      <textarea style="height: 30vh" required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
    </div>
    <a href="/" class="btn btn-seconday">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>

<%- include('../partials/footer.ejs') -%>
